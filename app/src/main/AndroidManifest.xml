<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="planner.venue.venue">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android:permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".tableViewer"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".displayMenu"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".tablePopUp"
            android:theme="@style/AppTheme.popUpTheme">

        </activity>
        <activity
            android:name=".menuPopUp"
            android:theme="@style/AppTheme.popUpTheme">

        </activity>
        <activity
            android:name=".addStaffMenu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".administrationMenu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".personalizationMenu"
            android:screenOrientation="landscape" >
        </activity>


        <activity android:name=".mainMenu" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register"></activity>
    </application>

</manifest>