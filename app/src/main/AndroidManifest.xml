<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="planner.venue.venue">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".mainMenu"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".tableViewer"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".displayMenu"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".tablePopUp"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.popUpTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".addStaffMenu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".administrationMenu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".personalizationMenu"
            android:screenOrientation="landscape" />

        <service
            android:name=".ServiceChronometer"
            android:exported="false"
            ></service>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android:permission.READ_EXTERNAL_STORAGE" />

</manifest>