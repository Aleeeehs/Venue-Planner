<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="89dp">

    <Button
        android:id="@+id/t5"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="89dp"
        android:text="Table5"
        app:layout_constraintBaseline_toBaselineOf="@+id/t4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/t4" />

    <Button
        android:id="@+id/t1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="160dp"
        android:text="Table 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/t2"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/t3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="112dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:text="Table 3"
        app:layout_constraintBottom_toTopOf="@+id/returnHome"
        app:layout_constraintEnd_toStartOf="@+id/t4"
        app:layout_constraintStart_toEndOf="@+id/t2"
        app:layout_constraintTop_toBottomOf="@+id/tableViewText" />

    <TextView
        android:id="@+id/tableViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:text="Table Viewer"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/t3"
        app:layout_constraintStart_toEndOf="@+id/t2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/returnHome"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t3" />

    <Button
        android:id="@+id/t2"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginEnd="89dp"
        android:layout_marginLeft="257dp"
        android:layout_marginRight="89dp"
        android:layout_marginStart="257dp"
        android:text="Table 2"
        app:layout_constraintBaseline_toBaselineOf="@+id/t1"
        app:layout_constraintEnd_toStartOf="@+id/t3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/t4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:text="Table 4"
        app:layout_constraintBottom_toBottomOf="@+id/t2"
        app:layout_constraintEnd_toStartOf="@+id/t5"
        app:layout_constraintStart_toEndOf="@+id/t3"
        app:layout_constraintTop_toTopOf="@+id/t2" />

</android.support.constraint.ConstraintLayout>