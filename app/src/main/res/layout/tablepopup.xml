<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:layout_editor_absoluteY="89dp">

    <TextView
        android:id="@+id/tableName"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/ReservedTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ReserveButton"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginBottom="42dp"
        android:text="Change Reservation"
        app:layout_constraintBottom_toTopOf="@+id/OrderToTable"
        app:layout_constraintEnd_toEndOf="@+id/OrderToTable"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/OrderToTable"
        app:layout_constraintTop_toBottomOf="@+id/ReservedTable" />

    <Button
        android:id="@+id/OrderToTable"
        android:layout_width="130dp"
        android:layout_height="72dp"
        android:layout_marginBottom="116dp"
        android:text="Order Food"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReserveButton" />

    <TextView
        android:id="@+id/ReservedTable"
        android:layout_width="254dp"
        android:layout_height="39dp"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ReserveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableName"
        tools:text="test" />

</android.support.constraint.ConstraintLayout>